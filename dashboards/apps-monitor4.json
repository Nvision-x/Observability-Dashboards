{
  "id": null,
  "uid": "nx-business-metrics",
  "title": "NX Business Metrics Dashboard",
  "tags": ["nx-applications", "business", "kpi", "metrics", "git-sync"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5m",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "User Activity",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(user_login_total{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "Logins/sec",
          "refId": "A"
        },
        {
          "expr": "sum(rate(user_action_total{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "Actions/sec",
          "refId": "B"
        }
      ]
    },
    {
      "id": 2,
      "title": "Transaction Volume",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(increase(business_transaction_total{namespace=\"$namespace\"}[1h]))",
          "legendFormat": "Transactions/hour",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "value"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "green", "value": 500}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Revenue Metrics",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(rate(revenue_generated_total{namespace=\"$namespace\"}[1h]))",
          "legendFormat": "Revenue/hour",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        }
      }
    },
    {
      "id": 4,
      "title": "API Usage by Client",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_requests_total{namespace=\"$namespace\"}[5m])) by (client_id))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Feature Usage",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(rate(feature_usage_total{namespace=\"$namespace\"}[1h])) by (feature)",
          "legendFormat": "{{feature}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Conversion Rate",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "100 * sum(rate(conversion_successful_total{namespace=\"$namespace\"}[1h])) / sum(rate(conversion_attempted_total{namespace=\"$namespace\"}[1h]))",
          "legendFormat": "Conversion %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "green", "value": 25}
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(kube_namespace_created, namespace)",
        "current": {
          "selected": false,
          "text": "default",
          "value": "default"
        }
      }
    ]
  }
}