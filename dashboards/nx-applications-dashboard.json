{
  "id": null,
  "uid": "nx-applications-monitoring",
  "title": "NX Applications Monitoring",
  "tags": ["nx", "applications", "microservices", "api", "git-sync"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
    "panels": [
    {
      "type": "graph",
      "title": "CPU Usage (per Pod)",
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace='$namespace', pod=~'.*'}[5m]))",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage (per Pod)",
      "targets": [
        {
          "expr": "sum by (pod) (container_memory_usage_bytes{namespace='$namespace', pod=~'.*'})",
          "legendFormat": "{{pod}}",
          "refId": "B"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Network Receive (per Pod)",
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_network_receive_bytes_total{namespace='$namespace', pod=~'.*'}[5m]))",
          "legendFormat": "{{pod}} RX",
          "refId": "C"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Network Transmit (per Pod)",
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_network_transmit_bytes_total{namespace='$namespace', pod=~'.*'}[5m]))",
          "legendFormat": "{{pod}} TX",
          "refId": "D"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Pod Count (Ready)",
      "targets": [
        {
          "expr": "count(kube_pod_status_ready{namespace='$namespace', condition='true'})",
          "legendFormat": "Ready Pods",
          "refId": "E"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Pod Restarts",
      "targets": [
        {
          "expr": "sum by (pod) (kube_pod_container_status_restarts_total{namespace='$namespace'})",
          "legendFormat": "{{pod}}",
          "refId": "F"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": "label_values(kube_pod_info, namespace)",
        "current": {
          "text": "default",
          "value": "default"
        }
      }
    ]
  }
}

