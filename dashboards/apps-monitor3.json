{
  "id": null,
  "uid": "nx-service-health",
  "title": "NX Service Health Dashboard",
  "tags": ["nx-applications", "health", "availability", "uptime", "git-sync"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Service Availability",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "avg(up{namespace=\"$namespace\"}) * 100",
          "legendFormat": "Availability %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 95},
              {"color": "green", "value": 99}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Health Check Status",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 18,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "probe_success{namespace=\"$namespace\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {"type": "color-background"}
              },
              {
                "id": "thresholds",
                "value": {
                  "steps": [
                    {"color": "red", "value": null},
                    {"color": "green", "value": 1}
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 3,
      "title": "Pod Restart Count",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(rate(kube_pod_container_status_restarts_total{namespace=\"$namespace\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Service Response Times",
      "type": "heatmap",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le)",
          "legendFormat": "{{le}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Circuit Breaker Status",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "circuit_breaker_state{namespace=\"$namespace\"}",
          "legendFormat": "{{service}} - {{state}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byValue", "options": {"value": 0}},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
          },
          {
            "matcher": {"id": "byValue", "options": {"value": 1}},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
          }
        ]
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(kube_namespace_created, namespace)",
        "current": {
          "selected": false,
          "text": "default",
          "value": "default"
        }
      }
    ]
  }
}