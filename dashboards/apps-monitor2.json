{
  "id": null,
  "uid": "nx-error-tracking 01",
  "title": "NX Error Tracking Dashboard",
  "tags": ["nx-applications", "errors", "debugging", "logs", "git-sync"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Error Rate by Service",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "100 * sum(rate(http_requests_total{namespace=\"$namespace\", status=~\"[45]..\"}[5m])) by (service) / sum(rate(http_requests_total{namespace=\"$namespace\"}[5m])) by (service)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Status Codes",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\"}[5m])) by (status, service)",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Application Logs (Errors)",
      "type": "logs",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "{namespace=\"$namespace\"} |= \"ERROR\" or \"FATAL\" or \"Exception\"",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "loki",
        "uid": "loki-nx"
      }
    },
    {
      "id": 4,
      "title": "Top Error Messages",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "expr": "topk(10, sum by (error_message) (rate(application_errors_total{namespace=\"$namespace\"}[5m])))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(kube_namespace_created, namespace)",
        "current": {
          "selected": false,
          "text": "default",
          "value": "default"
        }
      }
    ]
  }
}
